                <img src="http://data.desart.sk/avatars/1.png">
              </div>
              <div class="content">
                <div class="date">
                  {{ Notification.created_at }}
                  <a href="#"><i class="delete icon right aligned"></i></a>
                </div>
                <div class="summary">
                  {% if Notification.type == 1 %}
                      {{ Notification.message|raw }}
                  {% endif %}
                </div>
              </div>
            </div>
          {% else %}
              žiadne piče
          {% endfor %}

  			</div>
