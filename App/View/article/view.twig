{% extends "index.twig" %}

{% block title %}{{ Article.name }}{% endblock %}

{% block content %}
    <article id="articleview">{{ Article.content|raw }}</article>
    <font color="{{ Article.Category.color }}">{{ Article.Category.name }}</font>
    <aside id="author">
        {{ Article.User.username }}
        {{ Article.User.Meta.bio }}
    </aside>
    <div class="ui comments">
        <h3 class="ui dividing header">Comments</h3>
        {% for Comment in Article.Comments %}

            <div class="comment">
                <a class="avatar">
                    <img src="http://lorempixel.com/g/35/35/" alt="avatar">
                </a>

                <div class="content">
                    <a class="author">{{ Comment.User.username }}</a>

                    <div class="metadata">
                        <span class="date">{{ Comment.created_at.date|timeago }}</span>
                    </div>


                    <div class="text">
                        {{ Comment.text }}
                    </div>

                    <div class="actions">
                        <a class="reply">Reply</a>
                    </div>
                </div> <!-- ./content -->

                {% for Comment in Comment.ParentComment %}

                    <div class="comments">
                        <div class="comment">
                            <a class="avatar">
                                <img src="http://lorempixel.com/35/35/" alt="avatar">
                            </a>

                            <div class="content">
                                <a class="author">{{ Comment.User.username }}</a>

                                <div class="metadata">
                                    <span class="date">{{ Comment.created_at.date|timeago }}</span>
                                </div>


                                <div class="text">
                                    {{ Comment.text }}
                                </div>

                                <div class="actions">
                                    <a class="reply">Reply</a>
                                </div>
                            </div> <!-- ./content -->
                        </div> <!-- ./comment -->
                    </div> <!-- ./comments -->

                {% endfor %}
            </div> <!-- ./comment -->

        {% endfor %}
    </div>
    <div class="ui comments">
        <h3 class="ui dividing header">Comments</h3>
        {% for Comment in Article.Comments %}
            <div class="comment">
                <a class="avatar">
                    <img src="/images/avatar/small/matt.jpg">
                </a>
                <div class="content">
                    <a class="author">{{ Comment.User.username }}</a>
                    <div class="metadata">
                        <span class="date">{{ Comment.created_at|date('Y-m-d') }}</span>
                    </div>
                    <div class="text">
                        {{ Comment.text }}
                    </div>
                    <div class="actions">
                        <a class="reply">Reply</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        <form class="ui reply form">
            <div class="field">
                <textarea></textarea>
            </div>
            <div class="ui blue labeled submit icon button">
                <i class="icon edit"></i> Add Reply
            </div>
        </form>
    </div>
{% endblock %}
